<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21"
          fx:controller="cz.vse.sven.main.HomeController">
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints prefHeight="1.0" vgrow="SOMETIMES"/>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <MenuBar GridPane.columnSpan="2147483647">
            <menus>
                <Menu mnemonicParsing="false" text="Hra">
                    <items>
                        <MenuItem onAction="#novaHra" text="Nová hra"/>
                        <MenuItem onAction="#napovedaKlik" text="Nápověda"/>
                        <MenuItem onAction="#ukoncitHru" text="Ukončit"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <HBox spacing="10.0" GridPane.rowIndex="3">
            <children>
                <TextField fx:id="vstup" onAction="#odesliVstup" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </TextField>
                <Button fx:id="tlacitkoOdesli" mnemonicParsing="false" onAction="#odesliVstup" text="Odešli">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Button>
            </children>
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <SplitPane dividerPositions="0.18, 0.82" GridPane.rowIndex="2">
            <items>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Postavy v tomto prostoru"
                               textAlignment="CENTER" fx:id="labelPostavyVProstoru"/>
                        <ListView fx:id="panelPostavVProstoru" onMouseClicked="#klikPanelPostavVProstoru"/>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Věci v tomto prostoru"
                               textAlignment="CENTER" fx:id="labelVeciVProstoru"/>
                        <ListView fx:id="panelVeciVProstoru" onMouseClicked="#klikPanelVeciVProstoru"/>
                    </children>
                </VBox>
                <TextArea fx:id="vystup" editable="false"/>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Věci v batohu"
                               textAlignment="CENTER" fx:id="labelVeciVBatohu"/>
                        <ListView fx:id="panelVeciVBatohu" onMouseClicked="#klikPanelVeciVBatohu"/>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Východy"
                               textAlignment="CENTER" fx:id="labelVychody"/>
                        <ListView fx:id="panelVychodu" onMouseClicked="#klikPanelVychodu"/>
                    </children>
                </VBox>
            </items>
        </SplitPane>
        <TitledPane fx:id="mapaTop" text="Mapa" GridPane.rowIndex="1">
            <content>
                <HBox alignment="TOP_CENTER">
                    <children>
                        <Pane>
                            <children>
                                <ImageView fitHeight="350.0" fitWidth="700.0" layoutY="6.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@mapa.PNG"/>
                                    </image>
                                </ImageView>
                                <ImageView fx:id="hrac" fitHeight="40.0" fitWidth="40.0" layoutX="380.0" layoutY="110.0"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@hrac.png"/>
                                    </image>
                                </ImageView>
                            </children>
                        </Pane>
                    </children>
                </HBox>
            </content>
        </TitledPane>
    </children>
</GridPane>
